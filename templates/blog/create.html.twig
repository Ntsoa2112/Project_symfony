{% extends "base.html.twig" %}

{% form_theme formArticle 'bootstrap_4_layout.html.twig' %}

{% block body %}

    <h1>Cr√©ation d'un article</h1>

    {{ form_start(formArticle) }}


    {{ form_row(formArticle.title, {'attr': {'placeholder':"Le titre"}}) }}
    {{ form_row(formArticle.content, {'attr': {'placeholder':"Le contenu"}}) }}
    {{ form_row(formArticle.image, {'attr': {'placeholder':"Nom de l'Image"}}) }}

    <button type="submit" class="btn btn-success">
